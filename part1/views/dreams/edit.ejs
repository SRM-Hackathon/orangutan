<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= dreams.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/dreams/<%= dreams._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="dreams[name]" value="<%= dreams.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dreams[image]" value="<%= dreams.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dreams[description]" value="<%= dreams.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/dreams">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

