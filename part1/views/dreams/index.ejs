<% include ../partials/header %>
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Oneiro!</h1>
             <p>Everything Starts With A Dream!</p>
             <p>
                <a class="btn btn-primary btn-large" href="/dreams/new">Add New Dream</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% dreams.forEach(function(dreams){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= dreams.image %>">
                   <div class="caption">
                       <h4><%= dreams.name %></h4>
                   </div>
                   <p>
                       <a href="/dreams/<%= dreams._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
