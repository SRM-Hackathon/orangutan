<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Onerio!</h1>
             <p>Let us make our future now, and let us make our dreams tomorrow's reality.</p>
             <p>
                <a class="btn btn-primary btn-large" href="/dreams/new">Add New Dream</a>
             </p>
            
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         <div class="col-md-12">
             <% if(noMatch !== null) { %>
             <h3><%= noMatch %></h3>
             <p>
            	<form action="/dreams" method="GET" class="form-inline">
            		<div class="form-group">
            			<input type="text" name="search" placeholder="dreams search..." class="form-control">
            			<input type="submit" value="Search" class="btn btn-default">
            		</div>
            	</form>
            </p>
             <% } %>
         </div>
        <% dreams.forEach(function(dreams){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= dreams.image %>">
                   <div class="caption">
                       <h4><%= dreams.name %></h4>
                   </div>
                   <p>
                       <a href="/dreams/<%= dreams._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
